ol.breadcrumb
	li.breadcrumb-item 
		a(href='/') Of-Course
	li.breadcrumb-item 
		a(href='/UCSD') UCSD
	li.breadcrumb-item.active {{courseAbbreviation}}


// search bar 
//form
	div.form-group
		div.input-group
			div.input-group-addon
				i.glyphicon.glyphicon-search
			input.form-control(type='text', name='search', placeholder='Search classes...', ng-model='courseFilter')

//div.input-group
	input.form-control(type='text', name='search', placeholder='Search classes...')
	div.input-group-btn
		button.btn.btn-default(type='submit')
			i.glyphicon.glyphicon-search

// test word cloud
div
	canvas#canvas
button.btn.btn-warning(ng-click='wordCloud()') WordCloud

// new comment box
div.form-control.new-comment
		textarea.comment(placeholder='Enter your thoughts about {{courseAbbreviation}}...' ng-model="commentText")
		button#comment-button.btn.btn-primary.pull-right(ng-click="makePost()") Post

// list of posts
div#post-list(style='margin-bottom: 80px')
	div(ng-repeat='post in postList')
		div.row(ng-show='post.post')
			div.pull-left.post-list-item
				p.post-text {{post.post}}
			div.pull-right
				button.btn.btn-success(type="button" ng-click="upvotefunc($index,post._id)") Upvote
				h6 {{post.vote}}
				button.btn.btn-danger(type="button" ng-click="downvotefunc($index,post._id)") Downvote
				div
				button.btn.btn-primary(type="button" ng-click='replyToComment($index)') Reply
		hr

		div.subcomment-list(ng-show='post.subcomments.length && post.post') 
			h6(ng-click='expandSubComments($index)', ng-hide='expandedSubComments[$index]', style='margin-left: 50px;') More replies
			hr(ng-hide='expandedSubComments[$index]')
			ul(ng-show='expandedSubComments[$index]', style='list-style:none; margin-left: 30px')
				li(ng-repeat='subcomment in post.subcomments') 
					div.row
						div.pull-left {{ subcomment.subcomment }}
								div.pull-right
						div.pull-right
							button.btn.btn-success(type="button" ng-click="subupvotefunc($parent.$index,$index,subcomment._id)") Upvote
							h6 {{ post.subvotes[$index].subvote }}
							button.btn.btn-danger(type="button" ng-click="subdownvotefunc($parent.$index,$index,subcomment._id)") Downvote
					hr

		div.new-reply(ng-show='replyBoxes[$index] && post.post')
			div.form-control.new-comment(style='margin-bottom:50px')
				textarea.comment(placeholder='Type in a reply here...', ng-model='subcommenttext') 
				button.btn.btn-primary(type="button" ng-click='makesubpost($index,subcommenttext)') Reply or Post
				button.btn.btn-success(ng-click='cancelReply($index)') Cancel
		hr
